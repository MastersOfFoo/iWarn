<div id="wrapper">
	<div id="header">
		<div id="logo"></div>
	</div>
	<div id="container">
		<h2>Events</h2>
		<ul>
		<% @events.each do |event| %>
			<li><%= event.description %> 
				<%= link_to 'Show', admin_event_path(event) %>
				<%#= link_to 'Edit', '' %>
				<%#= link_to 'Remove', admin_event_path(event), :method => :delete, :onclick => "if (confirm('Are you sure you want to delete this event from iWarn?') == true) return true; else return false", :title => 'remove' %>
			</li>
		<% end %>
		</ul>
		<div class="clearfix"></div>
	</div>
</div>
